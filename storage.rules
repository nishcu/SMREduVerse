rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload files to their own posts folder
    match /posts/{userId}/{fileName} {
      // Allow read access to all posts
      allow read: if true;
      // Allow write (upload) only if user is authenticated and uploading to their own folder
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 100 * 1024 * 1024; // Max 100MB
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

