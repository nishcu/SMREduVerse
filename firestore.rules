rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    function isSuperAdmin() {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)/profile/$(request.auth.uid)).data.isSuperAdmin == true;
    }
    function isOwner(uid) {
        return isSignedIn() && request.auth.uid == uid;
    }

    // App Settings - Only Admins can write
    match /app-settings/{document=**} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    // Quests - Only Admins can write
    match /quests/{questId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }
    
    // Courses
    match /courses/{courseId} {
        allow read: if true;
        allow write: if isSuperAdmin() || (isSignedIn() && resource.data.instructorId == request.auth.uid);

        // Course chapters and lessons
         match /chapters/{chapterId} {
            allow read: if true;
            allow write: if isSuperAdmin() || (isSignedIn() && get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId == request.auth.uid);
            
             match /lessons/{lessonId} {
                allow read: if true;
                allow write: if isSuperAdmin() || (isSignedIn() && get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId == request.auth.uid);
            }
        }
    }

    // User data
    match /users/{uid}/{document=**} {
      allow read, write: if isOwner(uid);
    }
    match /users/{uid}/profile/{profileId} {
        allow read: if true;
        allow write: if isOwner(uid);
    }
    
    // Posts - All signed in users can create, only owners or admins can delete
    match /posts/{postId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update: if isSignedIn() && resource.data.authorUid == request.auth.uid;
        allow delete: if isSuperAdmin() || (isSignedIn() && resource.data.authorUid == request.auth.uid);
    }

    // Study Rooms
    match /study-rooms/{roomId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update: if isSignedIn() && resource.data.hostId == request.auth.uid;
        allow delete: if isSuperAdmin() || (isSignedIn() && resource.data.hostId == request.auth.uid);
    }
    
    // Contests - Only admins can write
    match /contests/{contestId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }

    // Partners
    match /partners/{partnerId} {
        allow read: if true;
        allow write: if isSuperAdmin() || (isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)/profile/$(request.auth.uid)).data.partnerId == partnerId);
    }
    
     match /partners/{partnerId}/{collection}/{docId} {
        allow read: if true;
        allow write: if isSuperAdmin() || (isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)/profile/$(request.auth.uid)).data.partnerId == partnerId);
    }

    // Partner Applications - Users can only create for themselves, Admins can read/write all
    match /partner-applications/{applicationId} {
        allow read: if isSuperAdmin();
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isSuperAdmin();
    }
  }
}
