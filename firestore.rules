
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for super admin status
    function isSuperAdmin(userId) {
      return get(/databases/$(database)/documents/users/$(userId)/profile/$(userId)).data.isSuperAdmin == true;
    }

    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Users can read their own profile, and anyone can read a public profile
    match /users/{uid}/profile/{profileId} {
      allow read: if true;
      allow write: if request.auth.uid == uid;
    }
    
    // Users can manage their own subcollections
    match /users/{uid}/{collection}/{docId} {
      allow read, write: if request.auth.uid == uid;
    }

    // Anyone can read courses, quests, and partners
    match /courses/{courseId} {
      allow read: if true;
      allow write: if isSuperAdmin(request.auth.uid) || get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId == request.auth.uid;
    }
    
    match /courses/{courseId}/{subcollection}/{docId} {
      allow read: if true;
       allow write: if isSuperAdmin(request.auth.uid) || get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId == request.auth.uid;
    }
    
    match /quests/{questId} {
      allow read: if true;
      allow write: if isSuperAdmin(request.auth.uid);
    }
    
    match /partners/{partnerId} {
      allow read: if true;
      allow write: if isSuperAdmin(request.auth.uid);
    }
    
    match /partners/{partnerId}/{subcollection}/{docId} {
        allow read: if true;
        allow write: if isSuperAdmin(request.auth.uid);
    }

    // Authenticated users can create partner applications for themselves
    match /partner-applications/{applicationId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isSuperAdmin(request.auth.uid);
    }

    // Posts can be read by anyone, but only created/updated/deleted by their author or an admin
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if isSuperAdmin(request.auth.uid) || request.auth.uid == resource.data.author.uid;
    }
    
    // Chats can only be accessed by participants
    match /chats/{chatId} {
        allow read, write: if request.auth.uid in resource.data.participants;
    }
    match /chats/{chatId}/messages/{messageId} {
        allow read, write: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
    }
    
    // Study Rooms can be read by anyone, but only modified by host or admin
    match /study-rooms/{roomId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if isSuperAdmin(request.auth.uid) || request.auth.uid == resource.data.hostId;
    }
    
    // Contests can be read by anyone, but only modified by admin
     match /contests/{contestId} {
        allow read: if true;
        allow write: if isSuperAdmin(request.auth.uid);
    }
    
    // App settings are admin-only
    match /app-settings/{document=**} {
      allow read, write: if isSuperAdmin(request.auth.uid);
    }
  }
}
