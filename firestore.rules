/**
 * @fileoverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user-specific data,
 * while allowing public read access to certain collections like courses and posts.
 * Administrative access is not explicitly defined in this iteration.
 *
 * Data Structure:
 * - User-specific data (profiles, enrollments, transactions, coupons, quest progress) is nested under /users/{userId}.
 * - Public data (courses, posts, study rooms, contests, partners) resides in top-level collections.
 * - Application settings are stored under /app-settings.
 *
 * Key Security Decisions:
 * - Listing of users is disallowed.
 * - All write operations on user-specific data require authentication and ownership validation.
 * - Public collections allow read access to all but require authentication and ownership validation for write access.
 *
 * Denormalization for Authorization:
 *  - It is assumed that documents in public collections like `/posts` contain an `author.uid` field
 *    to enable owner-based write permissions.
 *
 * Structural Segregation:
 * - The application uses separate collections for public (e.g., `/posts`) and private (e.g., `/users/{userId}/transactions`) data.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the current user is signed in.
     * @path N/A
     * @allow N/A
     * @deny N/A
     * @principle Authentication required for user-specific data access.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the current user is the owner of the resource.
     * @path N/A
     * @allow N/A
     * @deny N/A
     * @principle Enforces document ownership for user-specific data.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the current user is the owner of the resource and it exists.
     * @path N/A
     * @allow N/A
     * @deny N/A
     * @principle Enforces document ownership for existing user-specific data.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Grants or denies access to app settings.
     * @path /app-settings/economy
     * @allow get, list: if true;
     * @allow create, update, delete: if false; // TODO: Add admin role check.
     * @deny get, list: if false;
     * @deny create, update, delete: if true;
     * @principle Restricts modification of application settings to administrators.
     */
    match /app-settings/economy {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add admin role check.
    }

    /**
     * @description Grants or denies access to subscription plans.
     * @path /app-settings/monetization/subscription-plans/{planId}
     * @allow get, list: if true;
     * @allow create, update, delete: if false; // TODO: Add admin role check.
     * @deny get, list: if false;
     * @deny create, update, delete: if true;
     * @principle Restricts modification of subscription plans to administrators.
     */
    match /app-settings/monetization/subscription-plans/{planId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add admin role check.
    }

    /**
     * @description Grants or denies access to coin bundles.
     * @path /app-settings/monetization/coin-bundles/{bundleId}
     * @allow get, list: if true;
     * @allow create, update, delete: if false; // TODO: Add admin role check.
     * @deny get, list: if false;
     * @deny create, update, delete: if true;
     * @principle Restricts modification of coin bundles to administrators.
     */
    match /app-settings/monetization/coin-bundles/{bundleId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add admin role check.
    }

    /**
     * @description Grants or denies access to quests.
     * @path /quests/{questId}
     * @allow get, list: if true;
     * @allow create, update, delete: if false; // TODO: Add admin role check.
     * @deny get, list: if false;
     * @deny create, update, delete: if true;
     * @principle Restricts modification of quests to administrators.
     */
    match /quests/{questId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add admin role check.
    }

    /**
     * @description Grants or denies access to courses.
     * @path /courses/{courseId}
     * @allow get, list: if true;
     * @allow create, update, delete: if false; // TODO: Add admin/instructor role check with instructorId.
     * @deny get, list: if false;
     * @deny create, update, delete: if true;
     * @principle Allows public read access to courses, restricts writes to admins/instructors.
     */
    match /courses/{courseId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add admin/instructor role check with instructorId.
    }

    /**
     * @description Grants or denies access to chapters within a course.
     * @path /courses/{courseId}/chapters/{chapterId}
     * @allow get, list: if true;
     * @allow create, update, delete: if false; // TODO: Add admin/instructor role check.
     * @deny get, list: if false;
     * @deny create, update, delete: if true;
     * @principle Allows public read access to chapters, restricts writes to admins/instructors.
     */
    match /courses/{courseId}/chapters/{chapterId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add admin/instructor role check.
    }

    /**
     * @description Grants or denies access to lessons within a chapter.
     * @path /courses/{courseId}/chapters/{chapterId}/lessons/{lessonId}
     * @allow get, list: if true;
     * @allow create, update, delete: if false; // TODO: Add admin/instructor role check.
     * @deny get, list: if false;
     * @deny create, update, delete: if true;
     * @principle Allows public read access to lessons, restricts writes to admins/instructors.
     */
    match /courses/{courseId}/chapters/{chapterId}/lessons/{lessonId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add admin/instructor role check.
    }

    /**
     * @description Grants or denies access to a user's profile.
     * @path /users/{uid}/profile/{profileId}
     * @allow get: if true;
     * @allow list: if false;
     * @allow create: if isOwner(uid) && request.resource.data.id == uid;
     * @allow update: if isExistingOwner(uid) && request.resource.data.id == resource.data.id;
     * @allow delete: if isExistingOwner(uid);
     * @deny get: if false;
     * @deny list: if true;
     * @deny create: if !isOwner(uid) || request.resource.data.id != uid;
     * @deny update: if !isExistingOwner(uid) || request.resource.data.id != resource.data.id;
     * @deny delete: if !isExistingOwner(uid);
     * @principle Allows a user to create, update, and delete their own profile.  Public read access to profiles.
     */
    match /users/{uid}/profile/{profileId} {
      allow get: if true;
      allow list: if false;
      allow create: if isOwner(uid) && request.resource.data.id == uid;
      allow update: if isExistingOwner(uid) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(uid);
    }

    /**
     * @description Grants or denies access to a user's course enrollments.
     * @path /users/{uid}/enrollments/{courseId}
     * @allow get, list: if isOwner(uid);
     * @allow create: if isOwner(uid);
     * @allow update: if isExistingOwner(uid);
     * @allow delete: if isExistingOwner(uid);
     * @deny get, list: if !isOwner(uid);
     * @deny create: if !isOwner(uid);
     * @deny update: if !isExistingOwner(uid);
     * @deny delete: if !isExistingOwner(uid);
     * @principle Allows a user to manage their own course enrollments.
     */
    match /users/{uid}/enrollments/{courseId} {
      allow get, list: if isOwner(uid);
      allow create: if isOwner(uid);
      allow update: if isExistingOwner(uid);
      allow delete: if isExistingOwner(uid);
    }

    /**
     * @description Grants or denies access to a user's quest progress.
     * @path /users/{uid}/quest-progress/main
     * @allow get, list: if isOwner(uid);
     * @allow create: if isOwner(uid);
     * @allow update: if isExistingOwner(uid);
     * @allow delete: if isExistingOwner(uid);
     * @deny get, list: if !isOwner(uid);
     * @deny create: if !isOwner(uid);
     * @deny update: if !isExistingOwner(uid);
     * @deny delete: if !isExistingOwner(uid);
     * @principle Allows a user to manage their own quest progress.
     */
    match /users/{uid}/quest-progress/main {
      allow get, list: if isOwner(uid);
      allow create: if isOwner(uid);
      allow update: if isExistingOwner(uid);
      allow delete: if isExistingOwner(uid);
    }

    /**
     * @description Grants or denies access to posts.
     * @path /posts/{postId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn() && request.resource.data.author.uid == request.auth.uid;
     * @allow update: if resource != null && isSignedIn() && resource.data.author.uid == request.auth.uid;
     * @allow delete: if resource != null && isSignedIn() && resource.data.author.uid == request.auth.uid;
     * @deny get, list: if false;
     * @deny create: if !isSignedIn() || request.resource.data.author.uid != request.auth.uid;
     * @deny update: if resource == null || !isSignedIn() || resource.data.author.uid != request.auth.uid;
     * @deny delete: if resource == null || !isSignedIn() || resource.data.author.uid != request.auth.uid;
     * @principle Allows public read access to posts, restricts writes to the author.
     */
    match /posts/{postId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.author.uid == request.auth.uid;
      allow update: if resource != null && isSignedIn() && resource.data.author.uid == request.auth.uid;
      allow delete: if resource != null && isSignedIn() && resource.data.author.uid == request.auth.uid;
    }

    /**
     * @description Grants or denies access to a user's transactions.
     * @path /users/{uid}/transactions/{transactionId}
     * @allow get, list: if isOwner(uid);
     * @allow create: if isOwner(uid);
     * @allow update: if isExistingOwner(uid);
     * @allow delete: if isExistingOwner(uid);
     * @deny get, list: if !isOwner(uid);
     * @deny create: if !isOwner(uid);
     * @deny update: if !isExistingOwner(uid);
     * @deny delete: if !isExistingOwner(uid);
     * @principle Allows a user to manage their own transactions.
     */
    match /users/{uid}/transactions/{transactionId} {
      allow get, list: if isOwner(uid);
      allow create: if isOwner(uid);
      allow update: if isExistingOwner(uid);
      allow delete: if isExistingOwner(uid);
    }

    /**
     * @description Grants or denies access to study rooms.
     * @path /study-rooms/{roomId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn(); // TODO: Add host validation.
     * @allow update: if resource != null && isSignedIn() && resource.data.hostId == request.auth.uid; // TODO: Add host validation.
     * @allow delete: if resource != null && isSignedIn() && resource.data.hostId == request.auth.uid; // TODO: Add host validation.
     * @deny get, list: if false;
     * @deny create: if !isSignedIn();
     * @deny update: if resource == null || !isSignedIn() || resource.data.hostId != request.auth.uid;
     * @deny delete: if resource == null || !isSignedIn() || resource.data.hostId != request.auth.uid;
     * @principle Allows public read access to study rooms, restricts writes to the host.
     */
    match /study-rooms/{roomId} {
      allow get, list: if true;
      allow create: if isSignedIn(); // TODO: Add host validation.
      allow update: if resource != null && isSignedIn() && resource.data.hostId == request.auth.uid; // TODO: Add host validation.
      allow delete: if resource != null && isSignedIn() && resource.data.hostId == request.auth.uid; // TODO: Add host validation.
    }

    /**
     * @description Grants or denies access to contests.
     * @path /contests/{contestId}
     * @allow get, list: if true;
     * @allow create: if false; // TODO: Add admin/partner validation.
     * @allow update: if false; // TODO: Add admin/partner validation.
     * @allow delete: if false; // TODO: Add admin/partner validation.
     * @deny get, list: if false;
     * @deny create: if true;
     * @deny update: if true;
     * @deny delete: if true;
     * @principle Allows public read access to contests, restricts writes to admins/partners.
     */
    match /contests/{contestId} {
      allow get, list: if true;
      allow create: if false; // TODO: Add admin/partner validation.
      allow update: if false; // TODO: Add admin/partner validation.
      allow delete: if false; // TODO: Add admin/partner validation.
    }

    /**
     * @description Grants or denies access to a user's coupons.
     * @path /users/{uid}/coupons/{couponId}
     * @allow get, list: if isOwner(uid);
     * @allow create: if isOwner(uid); // TODO: Add validation for coupon generation logic.
     * @allow update: if isExistingOwner(uid);
     * @allow delete: if isExistingOwner(uid);
     * @deny get, list: if !isOwner(uid);
     * @deny create: if !isOwner(uid);
     * @deny update: if !isExistingOwner(uid);
     * @deny delete: if !isExistingOwner(uid);
     * @principle Allows a user to manage their own coupons.
     */
    match /users/{uid}/coupons/{couponId} {
      allow get, list: if isOwner(uid);
      allow create: if isOwner(uid); // TODO: Add validation for coupon generation logic.
      allow update: if isExistingOwner(uid);
      allow delete: if isExistingOwner(uid);
    }

    /**
     * @description Grants or denies access to partners.
     * @path /partners/{partnerId}
     * @allow get, list: if true;
     * @allow create: if false; // TODO: Add admin validation.
     * @allow update: if false; // TODO: Add admin validation.
     * @allow delete: if false; // TODO: Add admin validation.
     * @deny get, list: if false;
     * @deny create: if true;
     * @deny update: if true;
     * @deny delete: if true;
     * @principle Allows public read access to partners, restricts writes to admins.
     */
    match /partners/{partnerId} {
      allow get, list: if true;
      allow create: if false; // TODO: Add admin validation.
      allow update: if false; // TODO: Add admin validation.
      allow delete: if false; // TODO: Add admin validation.
    }

    /**
     * @description Grants or denies access to courses offered by a specific partner.
     * @path /partners/{partnerId}/courses/{courseId}
     * @allow get, list: if true;
     * @allow create: if false; // TODO: Add admin/partner validation.
     * @allow update: if false; // TODO: Add admin/partner validation.
     * @allow delete: if false; // TODO: Add admin/partner validation.
     * @deny get, list: if false;
     * @deny create: if true;
     * @deny update: if true;
     * @deny delete: if true;
     * @principle Allows public read access to partner courses, restricts writes to admins/partners.
     */
    match /partners/{partnerId}/courses/{courseId} {
      allow get, list: if true;
      allow create: if false; // TODO: Add admin/partner validation.
      allow update: if false; // TODO: Add admin/partner validation.
      allow delete: if false; // TODO: Add admin/partner validation.
    }

     /**
     * @description Grants or denies access to products offered by a specific partner.
     * @path /partners/{partnerId}/products/{productId}
     * @allow get, list: if true;
     * @allow create: if false; // TODO: Add admin/partner validation.
     * @allow update: if false; // TODO: Add admin/partner validation.
     * @allow delete: if false; // TODO: Add admin/partner validation.
     * @deny get, list: if false;
     * @deny create: if true;
     * @deny update: if true;
     * @deny delete: if true;
     * @principle Allows public read access to partner products, restricts writes to admins/partners.
     */
    match /partners/{partnerId}/products/{productId} {
      allow get, list: if true;
      allow create: if false; // TODO: Add admin/partner validation.
      allow update: if false; // TODO: Add admin/partner validation.
      allow delete: if false; // TODO: Add admin/partner validation.
    }

    /**
     * @description Grants or denies access to partner applications.
     * @path /partner-applications/{applicationId}
     * @allow get, list: if false; // TODO: Add admin validation.
     * @allow create: if isSignedIn();
     * @allow update: if false; // TODO: Add admin validation.
     * @allow delete: if false; // TODO: Add admin validation.
     * @deny get, list: if true;
     * @deny create: if !isSignedIn();
     * @deny update: if true;
     * @deny delete: if true;
     * @principle Allows any signed-in user to create a partner application, restricts read/write to admins.
     */
    match /partner-applications/{applicationId} {
      allow get, list: if false; // TODO: Add admin validation.
      allow create: if isSignedIn();
      allow update: if false; // TODO: Add admin validation.
      allow delete: if false; // TODO: Add admin validation.
    }
  }
}