/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for user-specific data
 * and allows public read access to some collections with owner-controlled writes.
 *
 * Data Structure:
 * - User-specific data is nested under /users/{userId}.
 * - Courses, Quests, Study Rooms, and Posts are stored in top-level collections.
 * - Economy settings and monetization options are stored under /app-settings.
 * - Partner-related data is stored under /partners.
 *
 * Key Security Decisions:
 * - Users can only read/write their own data under /users/{userId}.
 * - Listing of user documents is disallowed to protect privacy.
 * - Public read access is granted for courses, quests, study rooms, and posts,
 *   but writes are restricted to owners (where applicable).
 * - Super admin roles are not currently implemented.
 * - All writes are validated to ensure authenticated users.
 *
 * Denormalization for Authorization:
 * - Post documents should contain an authorId field to control write access.
 *
 * Structural Segregation:
 * - Public data (posts, courses, etc.) is stored in top-level collections,
 *   while private user data (enrollments, transactions) is stored under /users/{userId}.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is made by an authenticated user.
     * @path N/A
     * @allow N/A
     * @deny N/A
     * @principle Verifies user authentication.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user ID matches the provided user ID.
     * @path N/A
     * @allow N/A
     * @deny N/A
     * @principle Enforces document ownership based on user ID.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the existing owner of the document.
     * @path N/A
     * @allow N/A
     * @deny N/A
     * @principle Enforces document ownership for updates and deletes, verifying existence.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Grants owner-only access to user profile data.
     * @path /users/{userId}/profile/{profileId}
     * @allow (get, list) User A reading their own profile data.
     * @allow (create, update, delete) User A creating/updating/deleting their own profile data.
     * @deny (get, list) User A reading User B's profile data.
     * @deny (create, update, delete) User A attempting to modify User B's profile data.
     * @principle Enforces strict user ownership for profile management.
     */
    match /users/{userId}/profile/{profileId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Grants owner-only access to user enrollment data.
     * @path /users/{userId}/enrollments/{courseId}
     * @allow (get, list) User A reading their own enrollment data.
     * @allow (create, update, delete) User A creating/updating/deleting their own enrollment data.
     * @deny (get, list) User A reading User B's enrollment data.
     * @deny (create, update, delete) User A attempting to modify User B's enrollment data.
     * @principle Enforces strict user ownership for enrollment management.
     */
    match /users/{userId}/enrollments/{courseId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Grants owner-only access to user quest progress data.
     * @path /users/{userId}/quest-progress/main
     * @allow (get, list) User A reading their own quest progress data.
     * @allow (create, update, delete) User A creating/updating/deleting their own quest progress data.
     * @deny (get, list) User A reading User B's quest progress data.
     * @deny (create, update, delete) User A attempting to modify User B's quest progress data.
     * @principle Enforces strict user ownership for quest progress management.
     */
    match /users/{userId}/quest-progress/main {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Grants public read access to posts, with owner-only writes.
     * @path /posts/{postId}
     * @allow (get, list) Any user reading a post.
     * @allow (create) User A creating a post with authorId matching their UID.
     * @allow (update, delete) User A updating/deleting their own post (authorId matches UID).
     * @deny (create) User A creating a post with authorId not matching their UID.
     * @deny (update, delete) User A updating/deleting a post they don't own.
     * @principle Allows public reads with controlled writes based on ownership.
     */
    match /posts/{postId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.author.uid == request.auth.uid;
      allow update: if isSignedIn() && resource.data.author.uid == request.auth.uid && resource != null;
      allow delete: if isSignedIn() && resource.data.author.uid == request.auth.uid && resource != null;
    }

    /**
     * @description Grants owner-only access to user transaction data.
     * @path /users/{userId}/transactions/{transactionId}
     * @allow (get, list) User A reading their own transaction data.
     * @allow (create, update, delete) User A creating/updating/deleting their own transaction data.
     * @deny (get, list) User A reading User B's transaction data.
     * @deny (create, update, delete) User A attempting to modify User B's transaction data.
     * @principle Enforces strict user ownership for transaction management.
     */
    match /users/{userId}/transactions/{transactionId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Grants public read access to study rooms.
     * @path /study-rooms/{roomId}
     * @allow (get, list) Any user reading a study room.
     * @deny (create, update, delete) No write operations allowed.
     * @principle Allows public reads.
     */
    match /study-rooms/{roomId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Grants public read access to contests.
     * @path /contests/{contestId}
     * @allow (get, list) Any user reading a contest.
     * @deny (create, update, delete) No write operations allowed.
     * @principle Allows public reads.
     */
    match /contests/{contestId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Grants owner-only access to user coupon data.
     * @path /users/{userId}/coupons/{couponId}
     * @allow (get, list) User A reading their own coupon data.
     * @allow (create, update, delete) User A creating/updating/deleting their own coupon data.
     * @deny (get, list) User A reading User B's coupon data.
     * @deny (create, update, delete) User A attempting to modify User B's coupon data.
     * @principle Enforces strict user ownership for coupon management.
     */
    match /users/{userId}/coupons/{couponId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Grants public read access to partner data.
     * @path /partners/{partnerId}
     * @allow (get, list) Any user reading partner data.
     * @deny (create, update, delete) No write operations allowed.
     * @principle Allows public reads.
     */
    match /partners/{partnerId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Grants public read access to partner course data.
     * @path /partners/{partnerId}/courses/{courseId}
     * @allow (get, list) Any user reading partner course data.
     * @deny (create, update, delete) No write operations allowed.
     * @principle Allows public reads.
     */
    match /partners/{partnerId}/courses/{courseId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Grants public read access to partner product data.
     * @path /partners/{partnerId}/products/{productId}
     * @allow (get, list) Any user reading partner product data.
     * @deny (create, update, delete) No write operations allowed.
     * @principle Allows public reads.
     */
    match /partners/{partnerId}/products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Restricts access to partner application data.
     * @path /partner-applications/{applicationId}
     * @allow get, list: if false;
     * @allow create, update, delete: if false;
     * @principle No read or write access granted.
     */
    match /partner-applications/{applicationId} {
        allow get, list: if false;
        allow create, update, delete: if false;
    }

    /**
     * @description Grants public read access to app settings.
     * @path /app-settings/economy
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Allows public reads.
     */
    match /app-settings/economy {
        allow get, list: if true;
        allow create, update, delete: if false;
    }

     /**
     * @description Grants public read access to subscription plans.
     * @path /app-settings/monetization/subscription-plans/{planId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Allows public reads.
     */
    match /app-settings/monetization/subscription-plans/{planId} {
        allow get, list: if true;
        allow create, update, delete: if false;
    }

    /**
     * @description Grants public read access to coin bundles.
     * @path /app-settings/monetization/coin-bundles/{bundleId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Allows public reads.
     */
    match /app-settings/monetization/coin-bundles/{bundleId} {
        allow get, list: if true;
        allow create, update, delete: if false;
    }

     /**
     * @description Grants public read access to quests.
     * @path /quests/{questId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Allows public reads.
     */
    match /quests/{questId} {
        allow get, list: if true;
        allow create, update, delete: if false;
    }

    /**
     * @description Grants public read access to courses.
     * @path /courses/{courseId}
     * @allow (get, list) Any user reading a course.
     * @deny (create, update, delete) No write operations allowed.
     * @principle Allows public reads.
     */
    match /courses/{courseId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Grants public read access to chapters within a course.
     * @path /courses/{courseId}/chapters/{chapterId}
     * @allow (get, list) Any user reading a chapter.
     * @deny (create, update, delete) No write operations allowed.
     * @principle Allows public reads.
     */
    match /courses/{courseId}/chapters/{chapterId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Grants public read access to lessons within a chapter.
     * @path /courses/{courseId}/chapters/{chapterId}/lessons/{lessonId}
     * @allow (get, list) Any user reading a lesson.
     * @deny (create, update, delete) No write operations allowed.
     * @principle Allows public reads.
     */
    match /courses/{courseId}/chapters/{chapterId}/lessons/{lessonId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}