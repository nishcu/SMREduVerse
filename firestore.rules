rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isSuperAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)/profile/$(request.auth.uid)).data.isSuperAdmin == true;
    }
    
    function isPartner(partnerId) {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)/profile/$(request.auth.uid)).data.partnerId == partnerId;
    }

    // Matches any document in the 'profile' subcollection group.
    match /{path=**}/profile/{uid} {
       allow get: if isSignedIn();
       allow list: if isSuperAdmin(); // Only admins can list all profiles.
       allow update, write: if isOwner(uid);
    }
    
    match /users/{uid}/{document=**} {
      allow read, write: if isOwner(uid);
    }

    // App settings should be readable by all authenticated users
    // but only writable by super admins.
    match /app-settings/{document=**} {
      allow get: if isSignedIn();
      allow write: if isSuperAdmin();
    }
    
    // Public collections readable by any authenticated user
    match /courses/{courseId} {
      allow get: if isSignedIn();
      // Allow create/update only by the instructor or a super admin
      allow create, update: if isSignedIn() && (request.resource.data.instructorId == request.auth.uid || isSuperAdmin());
      allow delete: if isSuperAdmin();
    }
    
    match /courses/{courseId}/{subcollection}/{docId} {
      allow get: if isSignedIn();
      allow create, update: if isSignedIn() && (get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId == request.auth.uid || isSuperAdmin());
      allow delete: if isSuperAdmin();
    }

    match /posts/{postId} {
      allow read: if isSignedIn();
      // Allow users to create posts, but only they or an admin can update/delete
      allow create: if isSignedIn() && request.resource.data.author.uid == request.auth.uid;
      allow update, delete: if isSignedIn() && (resource.data.author.uid == request.auth.uid || isSuperAdmin());
    }

    match /quests/{questId} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin(); // Only admins can create/edit quests
    }

    match /study-rooms/{roomId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.hostId == request.auth.uid;
      allow update: if isSignedIn() && (resource.data.hostId == request.auth.uid || isSuperAdmin());
      allow delete: if isSuperAdmin();
    }
    
    // Chats are complex. A user must be a participant to read/write.
    match /chats/{chatId} {
        allow read, update: if isSignedIn() && request.auth.uid in resource.data.participants;
        allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
    }
    match /chats/{chatId}/messages/{messageId} {
        allow read, create: if isSignedIn() && get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
        allow update, delete: if isSuperAdmin(); // Only admins for moderation
    }

    match /contests/{contestId} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin(); // Only admins can manage contests
    }

    match /partners/{partnerId} {
      allow read: if isSignedIn();
      allow create, update: if isSuperAdmin() || isPartner(partnerId);
      allow delete: if isSuperAdmin();
    }
    
    match /partners/{partnerId}/{subcollection}/{docId} {
        allow read: if isSignedIn();
        allow create, update: if isSuperAdmin() || isPartner(partnerId);
        allow delete: if isSuperAdmin();
    }

    match /partner-applications/{applicationId} {
      // User can create their own application
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // Admins can read/update all applications
      allow read, update: if isSuperAdmin();
    }
  }
}
