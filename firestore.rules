    /**
     * @description Allows public access to creating a partner application.
     * @path /partner-applications/{applicationId}
     * @allow (get) No user can retrieve a partner application.
     * @allow (list) No user can list partner applications.
     */
    match /partner-applications/{applicationId} {
      allow get: if false;
      allow list: if false;
      allow create: if true;
      allow update: if false;
      allow delete: if false;
    }
  }
