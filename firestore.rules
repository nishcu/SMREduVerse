rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return request.auth.uid == uid;
    }
    
    function getRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)/profile/$(request.auth.uid)).data.isSuperAdmin;
    }

    function isSuperAdmin() {
      return isSignedIn() && getRole() == true;
    }

    // === App Settings (Read-only for users) ===
    match /app-settings/{document=**} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin();
    }

    // === Public Content (Read for users, Write for admins/owners) ===
    match /quests/{questId} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin();
    }
    
    match /contests/{contestId} {
        allow read: if isSignedIn();
        allow write: if isSuperAdmin() || (resource.data.partnerId != null && isOwner(get(/databases/$(database)/documents/partners/$(resource.data.partnerId)).data.ownerId));
    }
    
    match /partners/{partnerId} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin();
    }
    
    match /partners/{partnerId}/{collection}/{docId} {
        allow read: if isSignedIn();
        allow write: if isSuperAdmin();
    }
    
    match /partner-applications/{applicationId} {
      // Users can only create applications for themselves. Admins can read/update.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update: if isSuperAdmin();
    }
    
    match /study-rooms/{roomId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && request.resource.data.hostId == request.auth.uid;
        allow update: if isSignedIn() && resource.data.hostId == request.auth.uid;
    }
    
    match /posts/{postId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && request.resource.data.author.uid == request.auth.uid;
        allow update, delete: if isSignedIn() && (resource.data.author.uid == request.auth.uid || isSuperAdmin());
    }

    match /courses/{courseId} {
      allow read: if isSignedIn();
      // Allow create/update only by the instructor or a super admin
      allow create, update: if isSignedIn() && (request.resource.data.instructorId == request.auth.uid || isSuperAdmin());

      match /chapters/{chapterId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn() && (get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId == request.auth.uid || isSuperAdmin());
        
        match /lessons/{lessonId} {
            allow read: if isSignedIn();
            allow write: if isSignedIn() && (get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId == request.auth.uid || isSuperAdmin());
        }
      }
    }
    
    // === User-Specific Data (Only owner can access) ===
    match /users/{uid}/{document=**} {
      allow read, write: if isOwner(uid);
    }
    
    // Allow admins to read user profiles for moderation
    match /users/{uid}/profile/{profileId} {
      allow get: if isSignedIn(); // Allow any signed in user to get a profile
      allow list: if isOwner(uid) || isSuperAdmin();
      allow create: if isOwner(uid) && request.resource.data.id == uid;
      allow update: if isOwner(uid);
      allow delete: if isOwner(uid) || isSuperAdmin();
    }
    
    // Chats are special: participants can read/write messages
    match /chats/{chatId} {
      allow read, update: if isSignedIn() && request.auth.uid in resource.data.participants;
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
      
      match /messages/{messageId} {
        allow read, create: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }
  }
}