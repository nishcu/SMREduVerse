/**
 * @fileoverview Firestore Security Rules for the Study Platform.
 *
 * Core Philosophy:
 * This ruleset prioritizes user data ownership and restricts access to sensitive
 * information. Users can only create, read, update, and delete their own data
 * unless explicitly allowed otherwise. Public read access is granted to certain
 * collections, while writes are strictly controlled via ownership checks.
 *
 * Data Structure:
 * - User-specific data is nested under /users/{userId}, ensuring privacy.
 * - Public content (e.g., courses, posts) resides in top-level collections.
 * - Partner-related data is stored under /partners/{partnerId}.
 *
 * Key Security Decisions:
 * - Users can only manage their own profiles and enrollments.
 * - Super admin roles are not explicitly defined, defaulting to owner-only access.
 * - Public read access is enabled for courses, posts, and study rooms.
 * - Partner-related data access is not defined, defaulting to closed access.
 * - Partner application submissions are public, partner data is closed, and no relationships between partners and users are defined.
 * - Denormalization: No specific denormalization for authorization is required in this round, as authorization is based only on the current document and path.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows a user to manage their own profile data.
     * @path /users/{uid}/profile/{profileId}
     * @allow (create) User with UID 'user_abc' can create a profile document where the UID in the path matches their auth UID.
     * @allow (update) User with UID 'user_abc' can update their own profile.
     * @allow (delete) User with UID 'user_abc' can delete their own profile.
     * @deny (create) User with UID 'user_xyz' cannot create a profile document under the 'user_abc' path.
     * @deny (update) User with UID 'user_xyz' cannot update the profile of 'user_abc'.
     * @deny (delete) User with UID 'user_xyz' cannot delete the profile of 'user_abc'.
     * @principle Enforces document ownership for writes, restricts access to a user's own data tree, validates relational integrity between documents.
     */
    match /users/{userId}/profile/{profileId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }
      allow get: if true;
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows a user to manage their course enrollments.
     * @path /users/{uid}/enrollments/{courseId}
     * @allow (create) User with UID 'user_abc' can create an enrollment document under their own user ID.
     * @allow (update) User with UID 'user_abc' can update their own enrollment progress.
     * @allow (delete) User with UID 'user_abc' can delete their own enrollment.
     * @deny (create) User with UID 'user_xyz' cannot create an enrollment document under the 'user_abc' path.
     * @deny (update) User with UID 'user_xyz' cannot update the enrollment of 'user_abc'.
     * @deny (delete) User with UID 'user_xyz' cannot delete the enrollment of 'user_abc'.
     * @principle Enforces document ownership for writes, restricts access to a user's own data tree.
     */
    match /users/{userId}/enrollments/{courseId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
       function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }
      allow get: if true;
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows a user to manage their quest progress.
     * @path /users/{uid}/quest-progress/main
     * @allow (create) User with UID 'user_abc' can create a quest progress document under their own user ID.
     * @allow (update) User with UID 'user_abc' can update their own quest progress.
     * @allow (delete) User with UID 'user_abc' can delete their own quest progress.
     * @deny (create) User with UID 'user_xyz' cannot create a quest progress document under the 'user_abc' path.
     * @deny (update) User with UID 'user_xyz' cannot update the quest progress of 'user_abc'.
     * @deny (delete) User with UID 'user_xyz' cannot delete the quest progress of 'user_abc'.
     * @principle Enforces document ownership for writes, restricts access to a user's own data tree.
     */
    match /users/{userId}/quest-progress/main {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
       function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }
      allow get: if true;
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows a user to manage their wallet transactions.
     * @path /users/{uid}/transactions/{transactionId}
     * @allow (create) User with UID 'user_abc' can create a transaction document under their own user ID.
     * @allow (update) User with UID 'user_abc' can update their own transaction.
     * @allow (delete) User with UID 'user_abc' can delete their own transaction.
     * @deny (create) User with UID 'user_xyz' cannot create a transaction document under the 'user_abc' path.
     * @deny (update) User with UID 'user_xyz' cannot update the transaction of 'user_abc'.
     * @deny (delete) User with UID 'user_xyz' cannot delete the transaction of 'user_abc'.
     * @principle Enforces document ownership for writes, restricts access to a user's own data tree.
     */
    match /users/{userId}/transactions/{transactionId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
       function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }
      allow get: if true;
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

     /**
     * @description Allows a user to manage their coupons.
     * @path /users/{uid}/coupons/{couponId}
     * @allow (create) User with UID 'user_abc' can create a coupon under their own user ID.
     * @allow (update) User with UID 'user_abc' can update their own coupon.
     * @allow (delete) User with UID 'user_abc' can delete their own coupon.
     * @deny (create) User with UID 'user_xyz' cannot create a coupon document under the 'user_abc' path.
     * @deny (update) User with UID 'user_xyz' cannot update the coupon of 'user_abc'.
     * @deny (delete) User with UID 'user_xyz' cannot delete the coupon of 'user_abc'.
     * @principle Enforces document ownership for writes, restricts access to a user's own data tree.
     */
    match /users/{userId}/coupons/{couponId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
       function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }
      allow get: if true;
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows public read access to courses.  Write access is not defined.
     * @path /courses/{courseId}
     * @allow (get) Any user can retrieve a course.
     * @allow (list) Any user can list courses.
     * @deny (create) No user can create a course.
     * @deny (update) No user can update a course.
     * @deny (delete) No user can delete a course.
     * @principle Provides public read access while restricting writes.
     */
    match /courses/{courseId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
