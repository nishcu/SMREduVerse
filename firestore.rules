
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }
    function isExistingOwner(uid) {
      return request.auth != null && request.auth.uid == resource.data.uid;
    }
    function isSignedIn() {
      return request.auth != null;
    }
    function isSuperAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)/profile/$(request.auth.uid)).data.isSuperAdmin == true;
    }

    // App-wide settings can be read by any authenticated user
    match /app-settings/{document=**} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      // Write access should be restricted to admins in a real scenario
      allow write: if isSuperAdmin();
    }

    // All public content collections can be read by authenticated users
    match /courses/{courseId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isSignedIn(); // Allow any user to create a course
      allow update: if isSignedIn() && resource.data.instructorId == request.auth.uid; // Only instructor can update
      allow delete: if isSignedIn() && resource.data.instructorId == request.auth.uid; // Only instructor can delete
    }

    match /courses/{courseId}/{subcollection=**} {
        allow read: if isSignedIn();
        allow write: if isSignedIn() && get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId == request.auth.uid;
    }

    match /posts/{postId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.authorUid == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.authorUid == request.auth.uid;
    }

    match /quests/{questId} {
      allow get, list: if isSignedIn();
      allow write: if isSuperAdmin(); // Only admins can create/edit quests
    }

    match /study-rooms/{roomId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.hostId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.hostId == request.auth.uid;

      // Messages within a study room can be read/written by any signed-in user
      match /messages/{messageId} {
        allow read, write: if isSignedIn();
      }
    }
    
    match /contests/{contestId} {
        allow get, list: if isSignedIn();
        allow write: if isSuperAdmin();
    }
    
    match /partners/{partnerId} {
      allow get, list: if isSignedIn();
      allow write: if isSuperAdmin() || (isSignedIn() && resource.data.id == get(/databases/$(database)/documents/users/$(request.auth.uid)/profile/$(request.auth.uid)).data.partnerId);
    }

    match /partners/{partnerId}/{subcollection=**} {
      allow get, list: if isSignedIn();
      allow write: if isSuperAdmin() || (isSignedIn() && get(/databases/$(database)/documents/partners/$(partnerId)).data.id == get(/databases/$(database)/documents/users/$(request.auth.uid)/profile/$(request.auth.uid)).data.partnerId);
    }
    
    match /partner-applications/{applicationId} {
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow read, write: if isSuperAdmin();
    }
    
    // Rules for all user-specific data
    match /users/{uid}/{document=**} {
        allow read, write: if isOwner(uid);
    }

    // Rules for user profiles specifically
    match /users/{uid}/profile/{profileId} {
      allow get: if isSignedIn(); // Allow any signed in user to view profiles
      allow list: if isSignedIn(); // This is needed for the tutors page query
      allow create: if isOwner(uid) && request.resource.data.id == uid;
      allow update: if isOwner(uid);
      allow delete: if isOwner(uid);
    }
    
    // Collection group queries
    match /{path=**}/profile/{profileId} {
        allow read: if isSignedIn();
    }
    
    match /chats/{chatId} {
      // Allow read/write only if the user is a participant
      allow read, write: if isSignedIn() && request.auth.uid in resource.data.participants;
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;

      match /messages/{messageId} {
        allow read, write: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        allow create: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }
  }
}
