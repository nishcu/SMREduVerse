rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSuperAdmin(userId) {
        return get(/databases/$(database)/documents/users/$(userId)/profile/$(userId)).data.isSuperAdmin == true;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAuthenticated() {
        return request.auth != null;
    }

    // PUBLIC COLLECTIONS
    match /courses/{courseId} {
      allow read: if true;
      allow write: if isAuthenticated() && (request.resource.data.instructorId == request.auth.uid || isSuperAdmin(request.auth.uid));
        match /chapters/{chapterId} {
            allow read: if true;
            allow write: if isAuthenticated() && (get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId == request.auth.uid || isSuperAdmin(request.auth.uid));
            match /lessons/{lessonId} {
                allow read: if true;
                allow write: if isAuthenticated() && (get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId == request.auth.uid || isSuperAdmin(request.auth.uid));
            }
        }
    }
    
    match /quests/{questId} {
      allow read: if true;
      allow write: if isAuthenticated() && isSuperAdmin(request.auth.uid);
    }

    match /posts/{postId} {
      allow read: if true;
      allow create: if isAuthenticated() && request.resource.data.author.uid == request.auth.uid;
      allow update, delete: if isAuthenticated() && (resource.data.author.uid == request.auth.uid || isSuperAdmin(request.auth.uid));
    }
    
    match /study-rooms/{roomId} {
        allow read: if true;
        allow create: if isAuthenticated() && request.resource.data.hostId == request.auth.uid;
        allow update: if isAuthenticated() && resource.data.hostId == request.auth.uid;
    }

    match /contests/{contestId} {
        allow read: if true;
        allow create, update, delete: if isAuthenticated() && isSuperAdmin(request.auth.uid);
    }
    
    match /partners/{partnerId} {
        allow read: if true;
        allow write: if isAuthenticated() && (isSuperAdmin(request.auth.uid) || get(/databases/$(database)/documents/users/$(request.auth.uid)/profile/$(request.auth.uid)).data.partnerId == partnerId);
        
        match /courses/{courseId} {
            allow read: if true;
            allow write: if isAuthenticated() && (isSuperAdmin(request.auth.uid) || get(/databases/$(database)/documents/users/$(request.auth.uid)/profile/$(request.auth.uid)).data.partnerId == partnerId);
        }

        match /products/{productId} {
            allow read: if true;
            allow write: if isAuthenticated() && (isSuperAdmin(request.auth.uid) || get(/databases/$(database)/documents/users/$(request.auth.uid)/profile/$(request.auth.uid)).data.partnerId == partnerId);
        }
    }
    
    // PARTNER APPLICATIONS
    match /partner-applications/{applicationId} {
        allow read: if isAuthenticated() && isSuperAdmin(request.auth.uid);
        allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
        allow update: if isAuthenticated() && isSuperAdmin(request.auth.uid);
    }

    // USER-SPECIFIC COLLECTIONS
    match /users/{userId} {
        // Public profile is readable by anyone
        match /profile/{profileId} {
            allow read: if true;
            allow write: if isOwner(userId);
        }

        // Private data is only accessible by the owner
        match /enrollments/{enrollmentId} {
            allow read, write: if isOwner(userId);
        }
        match /quest-progress/{progressId} {
            allow read, write: if isOwner(userId);
        }
        match /transactions/{transactionId} {
            allow read, write: if isOwner(userId);
        }
        match /coupons/{couponId} {
            allow read, write: if isOwner(userId);
        }
    }
    
    // CHATS
    match /chats/{chatId} {
      allow read, write: if request.auth.uid in resource.data.participants;

      match /messages/{messageId} {
        allow read: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        allow create: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants && request.resource.data.authorUid == request.auth.uid;
      }
    }

    // APP SETTINGS - Generally read-only for users, write for admins
    match /app-settings/{setting} {
        allow read: if true;
        allow write: if isAuthenticated() && isSuperAdmin(request.auth.uid);
    }
     match /app-settings/monetization/{docId} {
        allow read: if true;
        allow write: if isAuthenticated() && isSuperAdmin(request.auth.uid);
          match /subscription-plans/{planId} {
              allow read: if true;
              allow write: if isAuthenticated() && isSuperAdmin(request.auth.uid);
          }
           match /coin-bundles/{bundleId} {
              allow read: if true;
              allow write: if isAuthenticated() && isSuperAdmin(request.auth.uid);
          }
    }
  }
}
